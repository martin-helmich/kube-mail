{
  "name": "kube-mail",
  "version": "1.0.0",
  "description": "SMTP server to handle outgoing emails from Kubernetes",
  "main": "dist/server.js",
  "repository": "https://github.com/martin-helmich/kube-mail",
  "author": "Martin Helmich",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/config": "^0.0.34",
    "@types/elasticsearch": "^5.0.23",
    "@types/express": "^4.16.1",
    "@types/google-protobuf": "^3.2.7",
    "@types/jest": "^24.0.25",
    "@types/mongodb": "^3.1.1",
    "@types/node": "11",
    "@types/nodemailer": "^4.6.7",
    "@types/protobufjs": "^5.0.31",
    "@types/uuid": "^3.4.4",
    "grpc-tools": "^1.6.6",
    "jest": "^23.6.0",
    "ts-jest": "^22.4.4",
    "ts-protoc-gen": "^0.9.0",
    "typescript": "^2.8.3"
  },
  "scripts": {
    "compile": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "test": "jest",
    "generate": "mkdir -p dist/grpc && ./node_modules/.bin/grpc_tools_node_protoc --js_out=import_style=commonjs,binary:dist/grpc --grpc_out=dist/grpc --plugin=\"protoc-gen-ts=./node_modules/.bin/protoc-gen-ts\" --ts_out=src/grpc proto/service.proto"
  },
  "dependencies": {
    "@mittwald/kubernetes": "^2.3.1",
    "@types/mailparser": "^2.4.0",
    "@types/smtp-server": "^3.5.1",
    "config": "^1.30.0",
    "debug": "^3.1.0",
    "elasticsearch": "^15.4.1",
    "email-addresses": "^3.0.3",
    "express": "^4.16.3",
    "google-protobuf": "^3.6.0",
    "grpc": "^1.13.0",
    "ip-address": "^5.8.9",
    "js-yaml": "^3.11.0",
    "mailparser": "^2.5.0",
    "mongodb": "^3.2.2",
    "nodemailer": "^4.6.4",
    "smtp-server": "^3.4.4",
    "uuid": "^3.3.2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.base.json"
      }
    },
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/tests/.*test.*$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ]
  }
}
